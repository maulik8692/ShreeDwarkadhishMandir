@using ShreeDwarkadhishMandir.Models;
@{
    ViewBag.Title = "Samagri Transaction";
    string casheCleaner = DateTime.Now.ToString("ddMMyyyyhhmmss");
    bool IsAllowedIssue = CheckValidation.IsAllowedIssue();
    bool IsAllowedIssueForSamagri = CheckValidation.IsAllowedIssueForSamagri();
    bool IsAllowedSoldOut = CheckValidation.IsAllowedSoldOut();
    bool IsAllowedScrapped = CheckValidation.IsAllowedScrapped();
    bool IsAllowedPurchase = CheckValidation.IsAllowedPurchase();
    bool IsAllowedDonation = CheckValidation.IsAllowedDonation();
    bool IsAllowedComplementary = CheckValidation.IsAllowedComplementary();
    bool IsAllowedNek = CheckValidation.IsAllowedNek();
}
<div class="row PaddingTop PaddingRight PaddingLeft">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                @if (IsAllowedIssueForSamagri)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/IssueForSamagri">
                            <i class="la la-box danger_Color"></i>Issue for Samagri
                        </a>
                    </div>
                }
                @if (IsAllowedIssue)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/Issue">
                            <i class="la la-exchange-alt danger_Color"></i>Issue or Transfer
                        </a>
                    </div>
                }
                @if (IsAllowedSoldOut)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/SoldOut">
                            <i class="la la-sign-out-alt danger_Color"></i>Sold out
                        </a>
                    </div>
                }
                @if (IsAllowedScrapped)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/Scrapped">
                            <i class="la la-trash-alt danger_Color"></i>Spoiled/Scrapped
                        </a>
                    </div>
                }
                @if (IsAllowedPurchase)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/Purchase">
                            <i class="la la-shopping-bag danger_Color"></i>Purchase
                        </a>
                    </div>
                }
                @if (IsAllowedDonation)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/Donation">
                            <i class="la la-donate danger_Color"></i>Take Donation
                        </a>
                    </div>
                }
                @if (IsAllowedComplementary)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/Complementary">
                            <i class="la la-gift danger_Color"></i>Complementary
                        </a>
                    </div>
                }
                @if (IsAllowedNek)
                {
                    <div class="account-dropdown__item">
                        <a href="/SamagriTransaction/Nek">
                            <i class="la la-user-circle danger_Color"></i>Nek
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>
<script src="~/js/HideProgress.js?@casheCleaner"></script>