@{
    ViewBag.Title = "CreateMandirVoucher";
    string cacheCleaner = DateTime.Now.ToString("ddMMyyyyhhmmss");
}

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 PaddingTop">
        <div class="card">
            <div class="card-header">
                <strong>MandirVoucher</strong>
            </div>

            <div class="card-body card-block">
                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">

                    <input type="hidden" id="Id" name="Id" class="form-control">

                    <div class="row form-group" style="display:none">
                        <div class="col col-md-3">
                            <label for="Mandir" class="form-control-label">Mandir</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="Mandir" id="Mandir" class="form-control"></select>
                            <small class="help-block form-text">Please select mandir.</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="VoucherType" class="control-label mb-1">Voucher Type</label>
                        </div>
                        <div class="col col-md-9">
                            <div class="form-check-inline form-check">
                                <label for="Credit" class="form-check-label">
                                    <input type="radio" checked id="Credit" name="VoucherType" value="Borrow" class="form-check-input">ઉધાર વાઉચર
                                </label>
                                <label for="Debit" class="form-check-label" style="margin-left:10px;">
                                    <input type="radio" id="Debit" name="VoucherType" value="Deposit" class="form-check-input">જમા વાઉચર
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="VoucherAccount" class="form-control-label">Voucher Account</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="VoucherAccount" id="VoucherAccount" class="form-control"></select>
                            <small class="help-block form-text">Please select Voucher Account.</small>
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="VoucherDate" class="form-control-label">VoucherDate</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input id="VoucherDate" name="VoucherDate" type="text" placeholder="Voucher Date" class="form-control DarshanDate">
                            <small class="help-block form-text">Please enter date of Voucher.</small>
                        </div>
                    </div>

                    <div class="form-group row Personal">
                        <div class="col col-md-3">
                            <label for="VoucherNo" class="control-label mb-1">Voucher No</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input id="VoucherNo" name="VoucherNo" type="text" placeholder="Enter Voucher No" class="form-control number">
                            <small class="help-block form-text">Please Enter Voucher No.</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="VoucherAmount" class="form-control-label">Voucher Amount</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="text" id="VoucherAmount" name="VoucherAmount" placeholder="Voucher Amount" class="form-control money">
                            <small class="help-block form-text">Please enter Voucher Amount.</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="Description" class="control-label mb-1">Description</label>
                        </div>
                        <div class="col col-md-9">
                            <textarea name="Description" id="Description" rows="9" placeholder="Description..." class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <button id="Save" style="min-width: 20%;" type="submit" class="btn button-save-new rounded-button">
                    <i class="las la-save"></i> Save
                </button>
                <button id="reset" style="min-width: 20%;" type="reset" class="btn button-reset rounded-button">
                    <i class="las la-undo-alt"></i> Reset
                </button>
                <a id="reset" style="min-width: 20%;" href="/MandirVoucher/MandirVoucher" class="btn button-Back rounded-button">
                    <i class="las la-long-arrow-alt-left"> </i> Back
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>

<script src="~/js/CreateMandirVoucher.js?@cacheCleaner"></script>