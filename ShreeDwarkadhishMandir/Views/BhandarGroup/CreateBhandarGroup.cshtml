@{
    ViewBag.Title = "Bhandar Group";
}

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 PaddingTop">
        <div class="card">
            <div class="card-header">
                <strong>Bhandar Group</strong>
            </div>

            <div class="card-body card-block">
                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">

                    <input type="hidden" id="Id" name="Id" class="form-control">

                    <div class="row form-group" style="display:none">
                        <div class="col col-md-3">
                            <label for="Mandir" class="form-control-label">Mandir</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="Mandir" id="Mandir" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group row Personal">
                        <div class="col col-md-3">
                            <label for="Name" class="control-label mb-1">Bhandar Group Name</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input id="Name" name="Name" type="text" placeholder="Enter Bhandar Group Name" class="form-control">
                            <small class="help-block form-text">Please Enter Bhandar Group Name.</small>
                        </div>
                    </div>

                    <div class="form-group row Personal">
                        <div class="col col-md-3">
                            <label for="GroupCode" class="control-label mb-1">Bhandar Group Code</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input id="GroupCode" name="GroupCode" type="text" placeholder="Enter Bhandar Group Code" class="form-control">
                            <small class="help-block form-text">Please Enter Bhandar Group Code.</small>
                        </div>
                    </div>

                    <div class="form-group row Personal">
                        <div class="col col-md-3">
                            <label for="Description" class="control-label mb-1">Bhandar Group Description</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <textarea id="Description" name="Description" type="text" placeholder="Enter Bhandar Group Description" class="form-control" ></textarea>
                            <small class="help-block form-text">Please Enter Bhandar Group Description.</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label class=" form-control-label"></label>
                        </div>
                        <div class="col col-md-9">
                            <div class="form-check">
                                <div class="checkbox">
                                    <label for="IsJewellery" class="form-check-label ">
                                        <input type="checkbox" id="IsJewellery" name="IsJewellery" class="form-check-input">Is For Jewellery?
                                    </label>
                                    <small class="help-block form-text text-warning">If it is checked &amp; saved then it can not be reverted.</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label class=" form-control-label"></label>
                        </div>
                        <div class="col col-md-9">
                            <div class="form-check">
                                <div class="checkbox">
                                    <label for="IsSamagri" class="form-check-label ">
                                        <input type="checkbox" id="IsSamagri" name="IsSamagri" class="form-check-input">Is For Samagri?
                                    </label>
                                    <small class="help-block form-text text-warning">If it is checked &amp; saved then it can not be reverted.</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label class=" form-control-label"></label>
                        </div>
                        <div class="col col-md-9">
                            <div class="form-check">
                                <div class="checkbox">
                                    <label for="IsActive" class="form-check-label ">
                                        <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input">Is Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <button id="Save" style="width:20%" type="submit" class="btn blueBackground btn-sm">
                    <i class="fa  fa-save"> </i> Save
                </button>
                <button id="reset" style="width:20%" type="reset" class="btn blueBackground btn-sm">
                    <i class="fa fa-refresh"> </i> Reset
                </button>
                <a id="reset" style="width:20%" href="/BhandarGroup/BhandarGroup" class="btn blueBackground btn-sm">
                    <i class="fa fa-arrow-left"> </i> Back
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>

<script src="~/js/CreateBhandarGroup.js"></script>