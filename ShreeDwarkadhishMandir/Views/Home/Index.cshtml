@using ShreeDwarkadhishMandir.Models;
@{
    ViewBag.Title = "Home";
    string casheCleaner = DateTime.Now.ToString("ddMMyyyyhhmmss");
    bool IsAllowedVaishnavJan = CheckValidation.IsAllowedVaishnavJan();
    bool IsAllowedManorathReceipt = CheckValidation.IsAllowedManorathReceipt();
    bool IsAllowedReceiptList = CheckValidation.IsAllowedReceiptList();
    bool IsAllowedManorath = CheckValidation.IsAllowedManorath();
}
<!-- STATISTIC-->
<section class="statistic statistic2">
    <div class="container">
        <div class="row">
            @if (IsAllowedVaishnavJan)
            {
                <a href="/Vaishnav/VaishnavJan" class="col-md-6 col-lg-3">
                    <div>
                        <div class="statistic__item statistic__item--green">
                            <h2 id="Vaishnavs" class="number">0</h2>
                            <span class="desc">Vaishnav</span>
                            <div class="icon">
                                <i class="las la-users"></i>
                            </div>
                        </div>
                    </div>
                </a>
            }

            @if (IsAllowedReceiptList || IsAllowedManorathReceipt)
            {
                <a id="bhet" class="col-md-6 col-lg-3" style="cursor: pointer;">
                    <div>
                        <div class="statistic__item statistic__item--orange">
                            <h2 id="Bhet" class="number">0</h2>
                            <span class="desc">Today's Bhet</span>
                            <div class="icon">
                                <i class="las la-receipt"></i>
                            </div>
                        </div>
                    </div>
                </a>
            }

            @if (IsAllowedManorath)
            {
                <a href="#ManorathOfToday" class="col-md-6 col-lg-3">
                    <div>
                        <div class="statistic__item statistic__item--blue">
                            <h2 id="Manorath" class="number">0</h2>
                            <span class="desc">Today's Manorath</span>
                            <div class="icon">
                                <i class="las la-calendar"></i>
                            </div>
                        </div>
                    </div>
                </a>
            }

            @if (IsAllowedReceiptList)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="statistic__item statistic__item--red">
                        <h2 id="Balance" class="number">0</h2>
                        <span class="desc">Balance</span>
                        <div class="icon">
                            <i class="las la-rupee-sign"></i>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- END STATISTIC-->
<!-- STATISTIC CHART-->
<section class="statistic-chart">
    <div class="container">
        @*<div class="row">
                <div class="col-md-12">
                    <h3 class="title-5 m-b-35">Information</h3>
                </div>
            </div>*@
        <div class="row">
            <div class="col-md-6 col-lg-5">
                <!-- TOP CAMPAIGN-->
                <div class="top-campaign" style="padding: 25px !important;">
                    <h3 class="title-3 m-b-30">Darshan</h3>
                    <div class="table-responsive">
                        <table class="table table-top-Darshan" id="DarshanTime"></table>
                    </div>
                </div>
                <!-- END TOP CAMPAIGN-->
            </div>
            <div class="col-md-6 col-lg-7">
                @*<h3 id="ManorathOfToday" class="title-5 m-b-35">Manorath</h3>*@
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2" id="ManorathListForToday"></table>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/Home.js?@casheCleaner"></script>