
@{
    ViewBag.Title = "Application User";
}
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 PaddingTop">
        <div class="card">
            <div class="card-header">
                <strong>Application</strong> User
            </div>
            <div class="card-body card-block">
                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                    
                    <input type="hidden" id="Id" name="Id" class="form-control">

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="Mandir" class="form-control-label">Mandir</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="Mandir" id="Mandir" class="form-control"></select>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="UserType" class="form-control-label">User Type</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="UserType" id="UserType" class="form-control"></select>
                            <small class="help-block form-text">Please select user type</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="Username" class="form-control-label">Username</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="text" id="Username" name="Username" placeholder="Username" maxlength="10" class="form-control">
                            <small class="help-block form-text">Please enter your Username</small>
                        </div>
                        <div class="col col-md-1">
                            <i id="UsernameCheck"></i>
                        </div>
                    </div>

                    <div class="Password row form-group">
                        <div class="col col-md-2">
                            <label for="password" class="form-control-label">Password</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control">
                            <small class="help-block form-text">The password must be at least 8 characters, at least 1 uppercase character, at least 1 lowercase character, at least one number and a maximum of 30 characters.</small>
                        </div>
                        <div class="col col-md-1">
                            <i id="passwordCheck"></i>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="DisplayName" class="form-control-label">Display Name</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="text" id="DisplayName" name="DisplayName" placeholder="Display Name" maxlength="50" class="form-control">
                            <small class="help-block form-text">Please enter your display name</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="Email" class="form-control-label">Contact Email</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="email" id="Email" name="Email" placeholder="Contact Email" class="form-control">
                            <small class="help-block form-text">Please enter Contact email</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="PhoneNumber" class="form-control-label">Contact Number</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="text" id="PhoneNumber" name="PhoneNumber" placeholder="Contact Number" class="form-control">
                            <small class="help-block form-text">Please enter your Contact Number</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="Address" class="form-control-label">Address</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <textarea name="Address" id="Address" rows="9" placeholder="Address..." class="form-control"></textarea>
                        </div>
                    </div>

                </form>
            </div>
            <div class="card-footer">
                <button id="Save" style="width:20%" type="submit" class="btn blueBackground btn-sm">
                    <i class="fa  fa-save"></i> Save
                </button>
                <button id="reset" style="width:20%" type="reset" class="btn blueBackground btn-sm">
                    <i class="fa fa-refresh"></i> Reset
                </button>
                <a id="reset" style="width:20%" href="/ApplicationUser/ApplicationUserList" class="btn blueBackground btn-sm">
                    <i class="fa fa-arrow-left"> </i> Back
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>
<script src="~/js/ApplicationUser.js"></script>
