<body style="overflow-x: hidden;">
    <div class="container">
        <div class="row m-t-10 m-b-10">
            <div class="col-md-6 col-lg-12 text-center">
                <h3 >Bhandar Summary Report<span id="FinancialYear"></span></h3>
            </div>
        </div>
        <div class="row PaddingTop">
            <div class="col-lg-12">
                @foreach (var balance in Model.GroupBy(x => x.StoreName))
                {
                    <div class="card">
                        <div class="card-header">
                            <strong>@balance.Key</strong>
                        </div>
                        <div class="card-body">
                            @foreach (var item in balance)
                            {
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">@item.Name</label>
                                    </div>
                                    <div class="col col-md-3">
                                        <label class="form-control-label">@item.CategoryName</label>
                                    </div>
                                    <div class="col-12 col-md-6 text-right">
                                        <label class="form-control-label text-right">@item.Balance @item.UnitAbbreviation</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</body>
